<div class="d-flex justify-content-center">
  <div class="mt-3 bg-dark opacity-75 rounded" style="max-width:500px; height:100%">

    <h2 class="mx-3 mt-3">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mx-3 mt-3" }) do |f| %>
      <!-- Email Field -->
      <div class="input-group flex-nowrap mb-3">
        <span style="width:100px" class="input-group-text">Email</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <!-- Password Field -->
      <div class="input-group flex-nowrap mb-3">
        <span style="width:100px" class="input-group-text">Password</span>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <!-- Remember Me -->
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMeCheck" %>
          <%= f.label :remember_me, "Remember Me", class: "form-check-label", for: "rememberMeCheck" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="d-flex justify-content-end">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="m-3">
      <%= render "devise/shared/links" %>
    </div>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="m-3 alert alert-success" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="m-3 alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

  </div>
</div>
