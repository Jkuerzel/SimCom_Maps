<div>
  <div>
    <h1>
      Map building #<%= @the_map_building.id %> details
    </h1>

    <div>
      <div>
        <a href="/map_buildings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_map_building/<%= @the_map_building.id %>">
          Delete map building
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Map
      </dt>
      <dd>
        <%= @the_map_building.map_id %>
      </dd>

      <dt>
        Building
      </dt>
      <dd>
        <%= @the_map_building.building_id %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @the_map_building.position_id %>
      </dd>

      <dt>
        Level
      </dt>
      <dd>
        <%= @the_map_building.level %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_map_building.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_map_building.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit map building
    </h2>

    <form action="/modify_map_building/<%= @the_map_building.id %>"  method="post" >
      <div>
        <label for="map_id_box">
          Map
        </label>

        <input type="text" id="map_id_box" name="query_map_id" value="<%= @the_map_building.map_id %>">
      </div>

      <div>
        <label for="building_id_box">
          Building
        </label>

        <input type="text" id="building_id_box" name="query_building_id" value="<%= @the_map_building.building_id %>">
      </div>

      <div>
        <label for="position_id_box">
          Position
        </label>

        <input type="text" id="position_id_box" name="query_position_id" value="<%= @the_map_building.position_id %>">
      </div>

      <div>
        <label for="level_box">
          Level
        </label>

        <input type="text" id="level_box" name="query_level" value="<%= @the_map_building.level %>">
      </div>

      <button>
        Update map building
      </button>
    </form>
  </div>
</div>

<hr>
