<div class="mt-3 d-flex flex-column justify-content-center align-items-center">
  <h2 class="m1"><%=@the_building.name%></h2>
  <div class="mt-3 d-flex flex-column align-items-center bg-dark mt-1 opacity-75 rounded" style="width:50%; height:100%">
    <div class="my-1 d-flex justify-content-between align-items-end">
      <div class="mt-3 mb-3 d-flex flex-column align-items-center">
        <div style="width: 200px; height: 200px; position: relative;">
          <img 
            class="z-1"
            style="object-fit: cover; width: 200px; height: 200px; position: absolute; top: 0; left: 0; z-index: 1;" 
            src="<%= @the_building.image_link %>" 
            alt="<%= @the_building.name %>">
          <img
            class="z-0"
            style="object-fit: cover; width: 190px; height: auto; position: absolute; top: 40px; left: 5px; z-index: 0;" 
            src="https://i.ibb.co/s9ZTcMF/block2.png" 
            alt="block" border="0">
        </div>

        <div class="fs-6 fw-semibold"><%= @the_building.name %></div>
      </div>
    </div>
    <% if @the_building.products.present? %>
    <i class="mt-1 bi bi-arrow-down"></i>

    <div class="mt-2 d-flex flex-wrap justify-content-center">
      <%@the_building.products.each do |a_product|%>
        <a href="/resources/<%= a_product.id %>" class="text-decoration-none" style="color: white;">
          <div class="my-2 mx-2 d-flex flex-column align-items-center">
            <img style="height:70px; width:70px;" src="<%=a_product.image_link%>">
            <div class="fw-semibold" style="font-size: 12px;"><%=a_product.name%></div>
          </div>
        </a>
      <%end%>
    </div>
    <%end%>
  </div>
</div>
