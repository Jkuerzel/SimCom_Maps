<div class="d-flex justify-content-center mt-3">
  <div style="max-width: 1000px;">
    <h2>My maps</h2>
    <% list_of_my_maps=@list_of_maps.where({:owner_id=>current_user.id})%>
    <% if list_of_my_maps.empty? %>
      <p>No maps found.</p>
    <% else %>
    <div>
      <div>
        <table class=" table table-dark table-striped table-hover table-sm" border="1">
          <tr>

            <th>
              Name
            </th>

            <th>
              Revenue
            </th>

            <th>
              Operating Profit
            </th>

            <th>
              Owner
            </th>

            <th>
            </th>
          </tr>
          <% list_of_my_maps.each do |a_map| %>
          <tr class="opacity-75">

            <td>
              <%= a_map.name %>
            </td>

            <td>
            <%= number_to_currency(a_map.total_revenue, precision: 0) %>
            </td>

            <td>
            <%= number_to_currency(a_map.operating_profit, precision: 0) %>
            </td>

            <td>
              <%= a_map.owner.username %>
            </td>

            <td>
                <a href="/maps/<%= a_map.id %>" class="btn btn-primary btn-sm">
                  <i class="bi bi-map-fill"></i>
                </a>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
    <%end%>



    <div>
      <%= render 'home_templates/new_map', 
        current_user: current_user %>

    </div>




    <h2 class="mt-3"> Top 10 Maps </h2>
    <div>
      <div>
        <table class="table table-dark table-striped table-hover table-sm" border="1">
          <tr>

            <th>
              Name
            </th>

            <th>
              Revenue
            </th>

            <th>
              Operating Profit
            </th>

            <th>
              Owner
            </th>

            <th>
            </th>
          </tr>

          <% @top10_maps.each do |a_map| %>
          <tr class="opacity-75">

            <td>
              <%= a_map.name %>
            </td>

            <td>
              <%= number_to_currency(a_map.total_revenue, precision: 0) %>
            </td>

            <td>
              <%= number_to_currency(a_map.operating_profit, precision: 0) %>
            </td>
            
            <td>
              <%= a_map.owner.username %>
            </td>

            <td>
              <a href="/maps/<%= a_map.id %>" class="btn btn-secondary btn-sm">
                <i class="bi bi-map-fill"></i>
              </a>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>


  <div>
</div>
